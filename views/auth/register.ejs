<%- include('../partials/header') -%>

<main class="mt-5 form-main">
  <div class="container mt-5">
    
    <form class="mt-5" method="POST" action="/register">
      <div class="row">
        <%- include('../partials/messages/message') -%>
        <div class="form-group col-md-6">
          <label for="username">Username:</label>
          <input name="username" type="text" class="form-control" placeholder="Enter username" id="username" required>
        </div>
        <div class="form-group col-md-6">
          <label for="email">Email address:</label>
          <input name="email" type="email" class="form-control" placeholder="Enter email" id="email" required>
        </div>
        <div class="form-group col-md-6">
          <label for="pwd">Password:</label>
          <input name="password" type="password" class="form-control" placeholder="Enter password" id="pwd" required>
        </div>
        <div class="form-group col-md-6">
          <label for="conpwd">Confirm Password:</label>
          <input name="confirmPassword" type="password" class="form-control" placeholder="Enter password again" id="conpwd" required>
        </div>
        
        
        <button type="submit" class="btn btn-primary btn-lg mb-2 d-block">Register</button><br>
        <div class="form-group form-check d-block">
          <label class="form-check-label">
            Already have an account? <a href="/login">Login</a> 
          </label>
        </div>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer') -%>