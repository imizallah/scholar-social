<%- include('./partials/header') -%>

<!-- Carousel Area -->
<div class="slider">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="./images/slider.jpg" class="d-block w-100" alt="Image Slider one">
      </div>
      <div class="carousel-item">
        <img src="./images/slider2.jpg" class="d-block w-100" alt="Image Slider Two">
      </div>
      <div class="carousel-item">
        <img src="./images/slider3.jpg" class="d-block w-100" alt="Image Slider Three">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- Jumbotron Area -->
<div class="container my-5">
  <div class="jumbotron text-center my-5">
    <h1 class="display-4">Welcome to Scholar Social!</h1>
    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to featured content or information.</p>
    <hr class="my-4">
    <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
    <a class="btn btn-primary btn-lg" href="#" role="button">Get Started!</a>
  </div>
</div>

<!-- Card Area -->
<div class="container cardHolder my-5">
  <div class="row my-5">
    <div class="col-md-4 my-3">
      <div class="card" style="width: 18rem;">
        <img src="./images/share.jpg" class="card-img-top" alt="Share Your thoughts">
        <div class="card-body">
          <h5 class="card-title">Share Your thoughts</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-primary">Create Post</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 my-3">
      <div class="card" style="width: 18rem;">
        <img src="./images/comments.jpg" class="card-img-top" alt="Comment on Posts">
        <div class="card-body">
          <h5 class="card-title">Comment on Posts</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-danger">Comment now</a>
        </div>
      </div>
    </div>
    <div class="col-md-4 my-3">
      <div class="card" style="width: 18rem;">
        <img src="./images/connections.jpg" class="card-img-top" alt="Create Connections">
        <div class="card-body">
          <h5 class="card-title">Create Connections</h5>
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          <a href="#" class="btn btn-success">Meet Someone</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') -%>